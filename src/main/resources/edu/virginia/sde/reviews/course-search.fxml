<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.virginia.sde.reviews.CourseSearchController"
            prefHeight="400.0" prefWidth="600.0">
    <!-- Search Section -->
    <VBox spacing="10" layoutX="20" layoutY="20">
        <Label text="Course Search" font="Bold 16"/>
        <HBox spacing="10">
            <Label text="Subject:"/>
            <TextField fx:id="subjectField" />
            <Label text="Number:"/>
            <TextField fx:id="numberField" />
            <Label text="Title:"/>
            <TextField fx:id="titleField" />
            <!--Button text="Search" onAction="#searchButtonClicked"/ -->
            <!--connect search button action method to controller-->
            <Button text = "Search"/>
        </HBox>
        <ListView fx:id="courseListView" prefHeight="300" prefWidth="600" />

        <!-- Add Course Section -->
        <Label text="Add Course" font="Bold 16"/>
        <HBox spacing="10">
            <Label text="Subject:"/>
            <TextField fx:id="addSubjectField" />
            <Label text="Number:"/>
            <TextField fx:id="addNumberField" />
            <Label text="Title:"/>
            <TextField fx:id="addTitleField" />
            <!-- Add action to controller: Button text="Add Course" onAction="#addCourseButtonClicked"/-->
            <Button text="Add Course" />
        </HBox>

        <!-- Navigation Buttons that need to be implemented-->
        <!--Button text="My Reviews" onAction="#myReviewsButtonClicked"/-->
        <Button text = "My Reviews"/>
        <!--Button text="Log Out" onAction="#logOutButtonClicked"/-->
        <Button text="Log out"/>
    </VBox>
</AnchorPane>
