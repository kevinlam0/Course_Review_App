<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/fxml/1"
            fx:controller="edu.virginia.sde.reviews.CourseSearchController"
            prefHeight="400.0" prefWidth="600.0">
    <!-- Red Text Box -->
    <Label fx:id= "errorLabel" textFill="red" layoutX="20"/>

    <!-- Search Section -->
    <VBox spacing="10" layoutX="20" layoutY="20">
        <Label text="Course Search"/>
        <HBox spacing="10">
            <Label text="Subject:"/>
            <TextField fx:id="subjectField" />
            <Label text="Number:"/>
            <TextField fx:id="numberField" />
            <Label text="Title:"/>
            <TextField fx:id="titleField" />
            <!--connect search button action method to controller-->
            <Button fx:id="searchButton" text = "Search" onAction="#handleSearch"/>
        </HBox>

        <TableView fx:id="courseTable" onMouseClicked="#handleClickTableView" prefHeight="200" prefWidth="600">
            <columns>
                <TableColumn fx:id="subjectColumn" text="Subject"/>
                <TableColumn fx:id="numberColumn" text="Number"/>
                <TableColumn fx:id="titleColumn" text="Title"/>
                <TableColumn fx:id="ratingColumn" text="Rating"/>
            </columns>
        </TableView>
        <!-- Add Course Section -->
        <Label text="Add Course"/>
        <HBox spacing="10">
            <Label text="Subject:"/>
            <TextField fx:id="addSubjectField" />
            <Label text="Number:"/>
            <TextField fx:id="addNumberField" />
            <Label text="Title:"/>
            <TextField fx:id="addTitleField" />
            <!-- Add action to controller: Button text="Add Course" onAction="#addCourseButtonClicked"/-->
            <Button text="Add Course" onAction="#handleAdd"/>
        </HBox>

        <!-- Navigation Buttons that need to be implemented-->
        <Button text = "My Reviews" onAction="#switchToMyReviews"/>
        <Button text="Log out" onAction="#handleLogout"/>
    </VBox>
</AnchorPane>
