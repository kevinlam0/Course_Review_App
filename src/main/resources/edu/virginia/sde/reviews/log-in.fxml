<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="525.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.LoginController">
    <stylesheets>
        <URL value="@./styles.css" />
    </stylesheets>

    <VBox alignment="CENTER" prefHeight="250.0" prefWidth="300.0" spacing="20" style="-fx-padding: 20;" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100" AnchorPane.topAnchor="50.0">
        <Label styleClass="christmas-header" text="MERRY CHRISTMAS!" />
        <Label styleClass="login-header" text="Log In or Create an Account" />
        <TextField styleClass="text-field" fx:id="usernameField" prefHeight="25.0" prefWidth="196.0" promptText="Username" />
        <PasswordField styleClass="text-field" fx:id="passwordField" promptText="Password" />

        <HBox alignment="CENTER" spacing="20">
            <!-- Log In Section -->

            <Button onAction="#handleLogin" text="Log In" />
            <Separator orientation="VERTICAL">
                <VBox.margin>
                    <Insets top="5" bottom="5" />
                </VBox.margin>
            </Separator>

            <!-- Create Account Section -->
    <!--        <TextField fx:id="newUsernameField" promptText="New Username" />-->
    <!--        <PasswordField fx:id="newPasswordField" promptText="New Password (at least 8 characters)" />-->
            <Button onAction="#handleCreateAccount" text="Create Account" />

            <!-- Error Label -->
            <Label fx:id="errorLabel" textFill="red" />
            <!-- Additional Label -->
            <Label fx:id="createSuccessLabel" styleClass="successfulCreation" />

            <!-- Close Button -->
        </HBox>
        <Button onAction="#handleClose" text="Close" />
    </VBox>
</AnchorPane>
